{
  "info": {
    "name": "Rate Limit Testing Collection",
    "description": "Collection to test rate limiting with rapid requests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Admin Endpoints",
      "item": [
        {
          "name": "POST /api/deployments (ADMIN) - Capacity: 100, Refill: 10/sec",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Check response status",
                  "if (pm.response.code === 429) {",
                  "    pm.test('Rate limit triggered ✓', function () {",
                  "        pm.expect(pm.response.code).to.equal(429);",
                  "        pm.expect(pm.response.text()).to.include('Rate limit exceeded');",
                  "    });",
                  "} else {",
                  "    pm.test('Request allowed ✓', function () {",
                  "        pm.expect([200, 201, 400, 404]).to.include(pm.response.code);",
                  "    });",
                  "}",
                  "",
                  "// Log response details",
                  "console.log('Status: ' + pm.response.code);",
                  "console.log('Time: ' + pm.response.responseTime + 'ms');",
                  "if (pm.response.code === 429) {",
                  "    console.log('✗ RATE LIMITED');",
                  "} else {",
                  "    console.log('✓ ALLOWED');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"serviceName\": \"test-service\",\n  \"version\": \"1.0.0\",\n  \"description\": \"Test deployment\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/deployments",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "deployments"
              ]
            }
          }
        },
